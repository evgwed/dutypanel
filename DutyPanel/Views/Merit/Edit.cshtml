@model DutyPanel.Models.Merit

@{
    ViewBag.Title = "Редактирование заслуги";
}
@if (Session["User"] is DutyPanel.Models.AdminUser)
{
    <h2>Редактирование заслуги</h2>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Id)

            <div class="editor-label">
                @Html.LabelFor(model => model.DateOfAssignment)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DateOfAssignment)
                @Html.ValidationMessageFor(model => model.DateOfAssignment)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Promotion)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Promotion)
                @Html.ValidationMessageFor(model => model.Promotion)
            </div>

            <p>
                <input type="submit" value="Сохранить изменения" />
            </p>
    }

    <div>
        @Html.ActionLink("Вернуться назад к списку", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            $(function () {
                $("#DateOfAssignment").appendDtpicker({ "dateFormat": "DD/MM/YYYY", locale: "ru", closeOnSelected: true, firstDayOfWeek: 1  });
            });
        </script>
    }
}
else
{
    @Html.Partial("AccessError")
}