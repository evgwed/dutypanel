@model DutyPanel.Models.LeavingGroup

@{
    ViewBag.Title = "Редактирование выезда оперативной группы";
}
@if ((Session["User"] is DutyPanel.Models.Duty) || (Session["User"] is DutyPanel.Models.AdminUser) || (Session["User"] is DutyPanel.Models.OperativeWorker))
{
    <h2>Редактирование выезда оперативной группы</h2>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.IdLeaving)

            <div class="editor-label">
                @Html.LabelFor(model => model.TimeLeaving)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TimeLeaving)
                @Html.ValidationMessageFor(model => model.TimeLeaving)
            </div>

            <p>
                <input type="submit" value="Сохранить изменения" />
            </p>
    }

    <div>
        @Html.ActionLink("Вернуться назад к списку", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            $(function () {
                $("#TimeLeaving").appendDtpicker({ "dateFormat": "DD/MM/YYYY hh:mm" });
            });
        </script>
    }
}
else
{
    @Html.Partial("AccessError")
}