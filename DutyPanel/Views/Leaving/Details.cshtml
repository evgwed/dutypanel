@model DutyPanel.Models.LeavingGroup

@{
    ViewBag.Title = "Информация о выезде оперативной группы";
}
@if (Session["User"]!=null)
{
    <h2>Информация о выезда оперативной группы</h2>
        <div>
             <b>@Html.DisplayNameFor(model => model.TimeLeaving): </b>@Html.DisplayFor(model => model.TimeLeaving)
        </div>
        <div>
             <b>@Html.DisplayNameFor(model =>  model.Statement.Adress): </b>@Html.DisplayFor(model =>  model.Statement.Adress)
        </div>
        <div>
             <b>@Html.DisplayNameFor(model =>   model.Statement.DeclarantLastName): </b>@Html.DisplayFor(model =>   model.Statement.DeclarantLastName)
        </div>
        <div>
             <b>@Html.DisplayNameFor(model =>  model.Statement.DeclarantFirstName): </b>@Html.DisplayFor(model =>  model.Statement.DeclarantFirstName)
        </div>
        <div>
             <b>@Html.DisplayNameFor(model =>  model.Statement.DeclarantSecondName): </b>@Html.DisplayFor(model =>  model.Statement.DeclarantSecondName)
        </div>
        <div>
             <b>Номер оперативной группы: </b>№@Html.DisplayFor(model =>  model.Group.IdGroup)
        </div>
        <div>
             <b>@Html.DisplayNameFor(model =>  model.Statement.Description): </b>@Html.DisplayFor(model =>  model.Statement.Description)
        </div>
    <p>
        @Html.ActionLink("Вернуться назад к списку", "Index")
        @if ((Model.Protocol == null) && (Session["User"] is DutyPanel.Models.OperativeWorker || Session["User"] is DutyPanel.Models.AdminUser))
        {
            <span> | </span>
            @Html.ActionLink("Создать протокол", "Create", "Protocol", new { id = Model.IdLeaving}, null)
        }
        else
        {
            if (Session["User"] is DutyPanel.Models.OperativeWorker || Session["User"] is DutyPanel.Models.AdminUser)
            { 
                <span> | </span>
                @Html.ActionLink("Составленный протокол", "Details", "Protocol", new { id = Model.Protocol.NumberProtocol}, null)
            }
        }
    </p>
}
else
{
    @Html.Partial("AccessError")
}