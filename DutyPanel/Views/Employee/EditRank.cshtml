@model DutyPanel.Models.EmployeeUser

@{
    ViewBag.Title = "Изменение звания";
}
@if(Session["User"] is DutyPanel.Models.AdminUser)
{
<h2>Изменение звания</h2>

using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Rank)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Rank, (SelectList)ViewData["Rank"])
            @Html.ValidationMessageFor(model => model.Rank)
        </div>

        <p>
            <input type="submit" value="Изменить звание" />
        </p>
}

<div>
    @Html.ActionLink("Вернуться назад к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
}
else
{
    @Html.Partial("AccessError")
}