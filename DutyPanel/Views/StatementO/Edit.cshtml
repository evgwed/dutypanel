@model DutyPanel.Models.OralStatement

@{
    ViewBag.Title = "Редактирование устного заявления";
}
@if (Session["User"] is DutyPanel.Models.Duty)
{
    <h2>Редактирование устного заявления</h2>

    using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <div class="editor-field">
            <select name="Status" id="Status">
                <option value="1">Заявление принято</option>
                <option value="2">Заявление находится в обработке</option>
                <option value="3">Отправлен ответ заявителю</option>
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneCaller)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneCaller)
            @Html.ValidationMessageFor(model => model.PhoneCaller)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AdressCaller)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.AdressCaller)
            @Html.ValidationMessageFor(model => model.AdressCaller)
        </div>

        @Html.HiddenFor(model => model.NumberStatement)

        <div class="editor-label">
            @Html.LabelFor(model => model.DeclarantLastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DeclarantLastName)
            @Html.ValidationMessageFor(model => model.DeclarantLastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DeclarantFirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DeclarantFirstName)
            @Html.ValidationMessageFor(model => model.DeclarantFirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DeclarantSecondName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DeclarantSecondName)
            @Html.ValidationMessageFor(model => model.DeclarantSecondName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateStatment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateStatment)
            @Html.ValidationMessageFor(model => model.DateStatment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DaetIncident)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DaetIncident)
            @Html.ValidationMessageFor(model => model.DaetIncident)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Adress)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Adress)
            @Html.ValidationMessageFor(model => model.Adress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.District)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.District)
            @Html.ValidationMessageFor(model => model.District)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Harm)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Harm)
            @Html.ValidationMessageFor(model => model.Harm)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <p>
            <input type="submit" value="Сохранить изменения" />
        </p>
    }

<div>
    @Html.ActionLink("Вернуться назад к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#DateStatment, #DaetIncident").appendDtpicker({ "dateFormat": "DD/MM/YYYY h:m" , locale: "ru", closeOnSelected: true, firstDayOfWeek: 1 });
        });
    </script>
}
}
else
{
    @Html.Partial("AccessError")
}
