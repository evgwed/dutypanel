<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" href="@Url.Content("~/Content/jquery.simple-dtpicker.css")" media="all" rel="stylesheet"/>
</head>
<body>
    <div class="head">
        <div class="cont">
            @Html.Partial("Header")
        </div>
    </div>
    <div class="cont">
        <div class="cont_b">
            @if (ViewData["ErrorText"]!=null)
            {
                <div class="error_b">@ViewData["ErrorText"]</div>
            }
            @RenderBody()
        </div>
        <div class="sidebar">
            @Html.Partial("Sidebar")
        </div>
    </div>
    <div class="footer">
        <div class="cont">
            @Html.Partial("Footer")
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.10.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.simple-dtpicker.js")"></script>
    <script>
        $(function () {
            $("#DateStatment").appendDtpicker({ "dateFormat": "DD/MM/YYYY h:m" });
            $("#DateGivePassport").appendDtpicker({ "dateFormat": "DD/MM/YYYY" });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
