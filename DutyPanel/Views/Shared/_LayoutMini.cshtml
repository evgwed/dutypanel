<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link type="text/css" href="@Url.Content("~/Content/SiteMini.css")" media="all" rel="stylesheet"/>
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" href="@Url.Content("~/Content/jquery.simple-dtpicker.css")" media="all" rel="stylesheet"/>
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.10.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.simple-dtpicker.js")"></script>
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="cont">
        <div class="left_column"> 
            <div class="sidebar">
                @Html.Partial("Sidebar")
            </div>
        </div>
        <div class="right_column">
            <div class="head">
                @Html.Partial("Header")
            </div>
            <div class="cont_b">
                @if (ViewData["ErrorText"]!=null)
                {
                    <div class="error_b">@ViewData["ErrorText"]</div>
                }
                @if (ViewData["InfoText"] != null)
                {
                    <div class="info_b">@ViewData["InfoText"]</div>
                }
                @RenderBody()
            </div>
            <div class="footer">
                    @Html.Partial("Footer")
            </div>
        </div>
    </div>
</body>
</html>
