            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar.IdCar)
        </div>
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar.NumberCar):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar.NumberCar)
        </div>
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar.BrandCar):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar.BrandCar)
        </div>
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar.ModelCar):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.Driver).WorkingCar.ModelCar)
