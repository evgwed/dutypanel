@model DutyPanel.Models.User

@{
    ViewBag.Title = "Index";
}
@if (Session["User"] != null)
{
    <h2>Ваш профиль</h2>
    <div class="display-label">
        <b>Вы авторизованы как:</b>
        @if (Session["User"] is DutyPanel.Models.AdminUser)
        {
            <span>Администратор</span>
        }
        @if (Session["User"] is DutyPanel.Models.Duty)
        {
            <span>Дежурный</span>
        }
        @if (Session["User"] is DutyPanel.Models.OperativeWorker)
        {
            <span>Оперативный работник</span>
        }
        @if (Session["User"] is DutyPanel.Models.Driver)
        {
            <span>Водитель</span>
        }
    </div>
    
    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).Password):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).Password)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).Email):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).Email)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).LastName):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).LastName)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).FirstName):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).FirstName)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).SecondName):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).SecondName)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).PassportNumber):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).PassportNumber)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).WhoGivePassport):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).WhoGivePassport)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).DateGivePassport):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).DateGivePassport)
