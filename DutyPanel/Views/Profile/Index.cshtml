        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).RegistrationAddress):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).RegistrationAddress)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.User).ContactPhone):</b>
        @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.User).ContactPhone)
    </div>
        if (Session["User"] is DutyPanel.Models.AdminUser)
        { 
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.AdminUser).DateOfLastEntry):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.AdminUser).DateOfLastEntry)
        </div>
        }
        if (Session["User"] is DutyPanel.Models.EmployeeUser)
        { 
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.EmployeeUser).EmployeeNumber):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.EmployeeUser).EmployeeNumber)
        </div>
