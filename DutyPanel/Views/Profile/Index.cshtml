            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.EmployeeUser).Rank.Salary)
        </div>
        }
        if (Session["User"] is DutyPanel.Models.Duty)
        { 
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.Duty).TypeDuty):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.Duty).TypeDuty)
        </div>
        }
        if (Session["User"] is DutyPanel.Models.OperativeWorker)
        { 
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.OperativeWorker).IsHeadOfGroup):</b>
            @if ((Session["User"] as DutyPanel.Models.OperativeWorker).IsHeadOfGroup)
            {
                <span>Да</span>
            }
            else
            {
                <span>Нет</span>
            }
        </div>
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.OperativeWorker).NumberServiceWeapon):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.OperativeWorker).NumberServiceWeapon)
        </div>
