            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.EmployeeUser).WorkingPhone):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.EmployeeUser).WorkingPhone)
        </div>
        <div class="display-label">
            <b>@Html.DisplayNameFor(model => (Session["User"] as DutyPanel.Models.EmployeeUser).PenaltiesCount):</b>
            @Html.DisplayFor(model => (Session["User"] as DutyPanel.Models.EmployeeUser).PenaltiesCount)
